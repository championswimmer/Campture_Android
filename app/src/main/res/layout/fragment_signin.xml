<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.campture.android.login.SigninFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <android.support.v7.widget.AppCompatImageView
            android:src="@drawable/ic_launcher_camp"
            android:layout_gravity="center"
            android:maxHeight="300dp"
            android:maxWidth="300dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatTextView
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:text="Campture"
            android:fontFamily="sans-serif-condensed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_facebook_signin"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:drawablePadding="3dp"
            android:padding="15dp"
            android:includeFontPadding="true"
            android:fontFamily="sans-serif-thin"
            android:textColor="@android:color/white"
            android:text="@string/login_with_facebook"
            android:drawableLeft="@drawable/ic_login_facebook"
            android:backgroundTint="@color/socialFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_twitter_signin"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:drawablePadding="3dp"
            android:padding="15dp"
            android:includeFontPadding="true"
            android:fontFamily="sans-serif-thin"
            android:textColor="@android:color/white"
            android:text="@string/login_with_twitter"
            android:drawableLeft="@drawable/ic_login_twitter"
            android:backgroundTint="@color/socialTwitter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/goto_signup_email"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/login_with_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</FrameLayout>
